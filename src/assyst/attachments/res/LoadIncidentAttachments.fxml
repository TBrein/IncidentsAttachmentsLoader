<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="90.0" prefWidth="300.0" vgap="5.0" fx:controller="assyst.attachments.Controller"
          xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="547.0" minWidth="10.0" prefWidth="205.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="294.0" minWidth="10.0" prefWidth="70.0"/>
    </columnConstraints>
    <children>
        <Button fx:id="downloadButton" onAction="#downloadAction" mnemonicParsing="false" text="Загрузить"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <TextField fx:id="incidentNumber" onKeyTyped="#checkInput" onAction="#downloadAction"
                   promptText="Введите номер инцидента" GridPane.rowIndex="1"/>
        <Label text="Загрузка вложений инцидента" GridPane.columnSpan="2" GridPane.halignment="CENTER"
               GridPane.valignment="CENTER">
            <font>
                <Font name="Tahoma Bold" size="15.0"/>
            </font>
            <padding>
                <Insets bottom="5.0"/>
            </padding>
        </Label>
        <ProgressBar fx:id="downloadBar" visible="false" minHeight="10.0" prefHeight="10.0" prefWidth="279.0"
                     GridPane.columnSpan="2" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM"
                     GridPane.vgrow="ALWAYS"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
